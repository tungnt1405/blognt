{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./public/js",
        // "rootDir": "./resources/assets/js/backend",
        "strict": true,
        "esModuleInterop": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "socketio/*"
            ]
        }
    },
    "include": [
        "resources/assets/js/backend/**/*",
        "socketio/*"
    ]
}